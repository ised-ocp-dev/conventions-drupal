{
    "name": "boehringer/bi-platform-drupal-conventions",
    "type": "library",
    "description": "Drupal standards for coding enforcement conventions.",
    "keywords": [
        "drupal",
        "coding style",
        "phpcs",
        "coding standard",
        "lint",
        "boehringer",
        "bi"
    ],
    "license": "MGPL-2.0-or-laterIT",
    "require": {
        "php": ">= 7.1.3",
        "drupal/coder": "^8.3",
        "boehringer/bi-platform-php-conventions": "dev-master",
        "drupal/devel": "^4.1"
    },
    "suggest": {
        "symplify/coding-standard": "The LineLength fixer needs this library. Only PHP >= 7."
    },
    "config": {
        "sort-packages": true
    },
    "repositories": {
        "bihub": {
            "type": "composer",
            "url": "https://repo.packagist.com/biitms/"
        }
    },    
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Boehringer\\DrupalConventions\\": "./src/"
        }
    }
}
